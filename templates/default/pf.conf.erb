<VirtualHost *:80>
    ServerName phishingfrenzy.local
    # !!! Be sure to point DocumentRoot to 'public'!
    DocumentRoot /var/www/phishing-frenzy/current/public
    RailsEnv production
    <Directory /var/www/phishing-frenzy/current/public>
        # This relaxes Apache security settings.
        AllowOverride all
        # MultiViews must be turned off.
        Options -MultiViews
    </Directory>
</VirtualHost>
